<div id="login-form" class="webui-popover-content">
    <form action="/api/login" method="post">
        <div class="input-field">
            <input type="text" placeholder="username" value="" id="username-login" name="userName" required="true">
        </div>
        <div class="input-field">
            <input type="password" placeholder="password" value="" id="password-login" name="password" required="true">
        </div>
        <button class="btn waves-effect waves-light blue darken-4 modal-trigger" href="#modal2" type="submit" name="action" id="login-btn">Login
            <i class="material-icons right">send</i>
        </button>
        <div id="modal2" class="modal">
                <div class="modal-content">
                  <h4>You're logged in!</h4>
