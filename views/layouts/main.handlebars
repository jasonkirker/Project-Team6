    <script>
        //We might migrate these files, but at they exist now (and here) for some compatibility purposes:

        $("#register-btn").on("click", function () {

            //On the press of the login button
            var username = $("#username-register").val();
            var password = $("#password-register").val();
            console.log("At this time, username: ", username);
            console.log("At this time, password: ", password);
            // See what values have been put into the fields.
        });

        $("#login-btn").on("mousedown", function (event) {
            event.preventDefault();
            $.post("/api/login", {
                userName: $("#username-login").val(),
                password: $("#password-login").val()
            }, function (response) {
                console.log("**JWT RECEIVED***: ", response);
                localStorage.setItem("token", response.token);
            });
        });

        $("#login-btn").on("mouseup", function (event) {
            event.preventDefault();
            $.post("/api/verifiedit", {
                jwtToken: localStorage.token
            }, function (response) {
                console.log("Response after token SENT to verified: ", response);
            });
        });






    </script>
